<Gerenciador>:
    Menu:
        name: 'menu'
    Tarefas:
        name:'tarefas'


<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding: root.width*0.25, root.height*0.1
        spacing: '30dp'
        Image:
            source: 'ghost.png'
            size_hint_y:4
            allow_stretch: True
        Botao:
            text: 'Tarefas'
            on_release:app.root.current= 'tarefas'
        Botao:
            text: 'Sair'
            on_release: root.confirmacao()

<Tarefas>:
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height

    BoxLayout:
        size_hint_y:None
        height: '40sp'
        TextInput: 
            id: texto
        Button: 
            text:'NEW'
            size_hint_x:None
            width: '40sp'
            on_release:root.addWidget()


<Tarefa>:
    size_hint_y:None
    height: '100sp'
    Label:
        id:label
        font_size: '20sp'
    Button:
        text:'X'
        size_hint_x:None
        width: '40sp'
        on_release:app.root.get_screen('tarefas').removeWidget(self.parent)
